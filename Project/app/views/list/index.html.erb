<ul class="nav nav-tabs">
  <li role="presentation" class="active"><a href="#">Create</a></li>
  <li role="presentation"><a href="/viewlists">My Lists</a></li>
  <li role="presentation"><a href="#">Log Out</a></li>
</ul>

<div id="main-container" class="container">
  <div id="left-container"class="container pull-left">
    <form id="create-list">
      <h1>Creat a To Do List</h1>
      <div class="form-group">
        <label for="input-list-name">List Name:</label>
        <input class="form-control" type="text" name="listName" id="input-list-name" placeholder="Name" required>
      </div>
      <div class="form-group">
        <label for="input-list-description">Description: </label>
        <input class="form-control" type="text" name="listDescription" id="input-list-description" placeholder="Description">
      </div>
      <button id="listSubmit" class="btn btn-default" type="submit">Create</button>

    </form>

    <form id="create-task">
      Name:<br>
      <input type="text" name="name">
      <br>
      Description:<br>
      <input type="text" name="description">
      <br>
      Due Date/Time:<br>
      <input type="text" name="dueDate">
      <br>
      Date Created:<br>
      <input type="text" name="dateCreated">
      <br>
      <button id="submit">Submit</button>
    </form>
  </div>
  <div id="right-container" class="container pull-right">
    <div class="page-header text-center">
      <h2>Your Lists</h2>
      <ul id="my-lists" class="list-group">
        <% @lists.each do |list| %>
          <li class="list-group-item"><%= list.name %><span class="glyphicon glyphicon-zoom-in pull-right"></span></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
